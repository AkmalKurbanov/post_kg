                .prohibited-goods-wrap
                  .prohibited-goods
                    .swiper.prohibited-js
                      .swiper-wrapper

                        each prohibited in [1,2,3,4]
                          .swiper-slide
                            .prohibited-goods__item
                              .prohibited-goods__item-img
                                img(src="images/dist/prohibited"+prohibited+".webp", alt="")


                a.btn.btn--empty.prohibited-goods-js(href="#") Полный список 
         


