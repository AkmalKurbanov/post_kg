                    .input.input--select 
                      input(type="number" step="0.5" min="0.5" max="200" value="0.5" onkeydown="if (event.keyCode == 69 || event.keyCode == 189) return false")#weight
                      .input__select
                        .input__select-selected 
                          span.output kg
